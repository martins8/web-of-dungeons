    "stop:db": "docker compose -f src/infra/compose.yaml stop",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martins8/web-of-dungeons.git"
  },
  "keywords": [
    "text",
    "rpg",
    "web"
  ],
  "author": "icehowl",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/martins8/web-of-dungeons/issues"
  },
  "homepage": "https://github.com/martins8/web-of-dungeons#readme",
  "dependencies": {
    "dotenv": "^17.2.3",
    "next": "^16.1.0",
    "pg": "^8.16.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^30.2.0",
    "prettier": "^3.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
