{
  "name": "web-of-dungeons",
  "version": "1.0.0",
  "description": "this is a dungeon crawler text based rpg in construction",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "dev": "next dev",
    "up:db": "docker compose -f src/infra/compose.yaml up -d",
